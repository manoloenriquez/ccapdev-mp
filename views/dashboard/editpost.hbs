<div class="container mt-5">
  <h1 class="text-uppercase text-center">Edit Post</h1>
  <hr>
  <form data-slug="{{ post.slug }}" name="editpost" id="editpost" onsubmit="editPost(event)">

    <div class="my-3">
      <label for="title" class="h2 text-uppercase">Title:</label>
      <input type="text" name="title" class="form-control" onkeyup="updateSlug(event)" value="{{ post.title }}">
    </div>

    <div class="my-3">
      <label for="content" class="h2 text-uppercase">Content:</label>
      <textarea name="content" cols="30" rows="10" class="form-control">{{ post.content }}</textarea>
    </div>
    
    <div class="my-3">
      <label for="headerimg" class="h2 text-uppercase">Header image url:</label>
      <input type="text" name="headerimg" class="form-control" value="{{ post.headerimg }}">
    </div>

    <div class="my-3">
      <label for="slug" class="h2 text-uppercase">Slug:</label>
      <input type="text" name="slug" class="form-control" value="{{ post.slug }}" readonly>
    </div>

    <p id="editmsg" class="text-danger"></p>
    <input type="submit" value="Submit" class="btn btn-primary">
  </form>
</div>