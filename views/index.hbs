<!-- Page Header -->
<header class="masthead pt-5" style="background: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/shapelined-_JBKdviweXI-unsplash.jpg')">
  
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <form action="/search" class="d-flex">
            <input type="text" name="search" placeholder="Search content here" id="search" class="form-control" autocomplete="off">
            <button type="submit" class="btn btn-primary py-0 px-3 rounded">
              <i class="fas fa-search"></i>
            </button>
          </form>
          <div id="results" class="w-100 bg-light d-flex flex-column">
            
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <h1 class="text-center">Recent Posts</h1>
      <hr>
      {{#each posts}}
      <div class="post-preview">
        <a href="/post/{{this.slug}}">
          <h2 class="post-title">
            {{this.title}}
          </h2>
          <h3 class="post-subtitle">
            {{this.subtitle}}
          </h3>
        </a>
        <p class="post-meta">Posted by
          <a href="/user/{{this.author.username}}">{{this.author.username}}</a>
          on {{this.date}}
        </p>
      </div>
      {{/each}}
      <hr>
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-end" href="/post/">All Posts &rarr;</a>
      </div>
    </div>
  </div>
</div>